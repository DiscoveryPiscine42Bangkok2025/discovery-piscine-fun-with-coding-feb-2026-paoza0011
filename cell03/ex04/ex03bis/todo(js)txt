$(document).ready(function () {

    $("#new").click(function () {
        let task = prompt("Enter a new task:");
        if (task) {
            $("#ft_list").prepend(
                $("<div></div>")
                    .addClass("todo")
                    .text(task)
                    .click(function () {
                        if (confirm("Do you want to remove this task?")) {
                            $(this).remove();
                        }
                    })
            );
        }
    });

});
